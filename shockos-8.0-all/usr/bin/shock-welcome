#!/bin/bash

#welcome screen for Shock OS. Run on first-boot

if [[ -f ~/.config/shock-welcome-indicator ]]
then

    ds=$(yad --form --width=500 --window-icon=start-here --title="Welcome to Shock OS" --field="Congratulations! Your new system is ready to go. Here are a few things you can do to personalize your system:":LBL "" --field="Set Desktop Wallpaper"\!background:FBTN "shock-wallpapers" --field="Choose Themes and Accent Colors"\!gnome-settings-theme:FBTN "shock-themes" --field="Choose Panel Layout"\!mate-panel:FBTN "shock-panel-layout-changer" --field="":LBL "" --field="Search for, install, and remove apps and games with the Shockware Center.":LBL "" --field="Browse the Shockware Center"\!/usr/share/shockware-center/icon.svg:FBTN "shockware-center" --field="":LBL "" --field="By default, Shock OS outputs audio through the 3.5mm headphone jack, but you may want to switch to HDMI or another source.":LBL "" --field="Manage Audio Output Device"\!audio-card:FBTN "mate-volume-control --page=output" --field="":LBL "" --field="Thank you for choosing Shock OS! We hope you love it!

John 15:12":LBL "" --field="":LBL "" --field="Launch this window at startup":CHK "TRUE" --button=Dismiss)

    if [[ "$ds" == *"FALSE"* ]]
    then

        rm ~/.config/shock-welcome-indicator

    fi

fi
