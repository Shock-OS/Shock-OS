#!/bin/bash

yad --picture --center --window-icon=mate-panel --title="Panel Layouts" --button-layout=center --filename=/shock/layouts.png --size=fit --width=500 --height=300 --button="Modern" --button="Traditional" --text="Please choose a panel layout."

r=$?

if [[ "$r" == "0" ]]
then

    mate-panel --reset --layout=default

elif [[ "$r" == "1" ]]
then

    mate-panel --reset --layout=fedora

fi
