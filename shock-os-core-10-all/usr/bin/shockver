#!/bin/bash

source /usr/share/shock/shock-dist-info

if (($(getconf LONG_BIT)==32))
then

    arch="ARM 32-bit"

else

    arch="ARM 64-bit"

fi

yad --window-icon=/usr/share/shock/gnome-logo-white.svg --width=400 --height=400 --title="About Shock OS" --picture --size=fit --filename=/usr/share/shock/gnome-logo-white.svg --text="
<b>${FULL_NAME}</b>

$(cat /proc/device-tree/model)

$DE_EDITION Edition

$arch

<small>Built on ${BUILD_DATE}</small>
" --text-align=center --buttons-layout=center --button="Close"\!gtk-close
