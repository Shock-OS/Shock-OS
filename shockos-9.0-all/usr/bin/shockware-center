            all_flatpaks_proxy+=($(grep -B 10 '<category>*Accessibility*</category>' "$flatpak_appstream_dir"/active/appstream.xml | grep -o '<name>[^<]*</name>' | sed 's/<name>\([^<]*\)<\/name>/"\1 [FLATPAK]"/'))

            all_flatpaks_proxy+=($(grep -B 10 '<category>*Archiving*</category>' "$flatpak_appstream_dir"/active/appstream.xml | grep -o '<name>[^<]*</name>' | sed 's/<name>\([^<]*\)<\/name>/"\1 [FLATPAK]"/'))

            all_flatpaks_proxy+=($(grep -B 10 '<category>*Calculator*</category>' "$flatpak_appstream_dir"/active/appstream.xml | grep -o '<name>[^<]*</name>' | sed 's/<name>\([^<]*\)<\/name>/"\1 [FLATPAK]"/'))

